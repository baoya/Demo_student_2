<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  	<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="150px">
  	    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >  
       <EditText 
           android:id="@+id/re_user_name"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_weight="3"
           android:hint="请输入用户名"
           android:layout_margin="5dp"
           android:background="@drawable/edtext_1"/>  
    </TableRow>
    <TableRow>
       <EditText 
           android:id="@+id/re_user_pass"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_weight="3"
           android:password="true"
           android:hint="请输入密码"
           android:layout_margin="5dp"
           android:background="@drawable/edtext_1"/>  
    </TableRow>
   <TableRow>
     
       <EditText 
           android:id="@+id/re_user_pass_2"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_weight="3"
           android:password="true"
           android:hint="请确认输入密码"
           android:layout_margin="5dp"
           android:background="@drawable/edtext_1"/>  
           
    </TableRow>
    <Button 
        android:id="@+id/re_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即注册"
        android:background="@drawable/button_2"
        android:layout_margin="5dp"/>
    <Button 
        android:id="@+id/re_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已有账号,返回!"
        android:background="@drawable/button_2"
        android:layout_margin="5dp"/>
  	    
  	</TableLayout>

    
	
</TableLayout>